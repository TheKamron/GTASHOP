  <div class="author-page">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="author">
            <img src="/images/{{userAvatar}}" alt="" style="border-radius: 50%; max-width: 170px;">
            <h3>{{userName}}<br> <a href="#">@{{userName}}</a></h3>
          </div>
        </div>
        
        <div class="col-lg-6">
          <div class="right-info">
            <div class="row">
              
              <div class="col-5">
                <div class="data-length">
                  <i class="fa fa-signal"></i>
                  <h6><em>E'lonlar Soni: </em> {{data.length}} ta</h6>
                </div>
              </div>
               <div class="col-6">
                <div class="info-item">
                  <i class="fa fa-clock"></i>
                  <h6><em>Ro'yxatdan O'tilgan Sana: </em>{{formatDate regData}}</h6>
                </div>
              </div>
              <div class="col-5">
                <div class="info-item">
                  <i class="fa fa-star"></i>
                  <h6><em>Tarif: </em> 
                  {{#ifequal role "premium" }}
                  <span class="premium-vip">Premium VIP</span>  
                  {{/ifequal}}
                  {{#ifequal role "admin" }}
                  <span class="premium-vip">Premium VIP</span>  
                  {{/ifequal}}
                  {{#ifequal role "pro" }}
                  <span class="pro-vip">PRO VIP</span>  
                  {{/ifequal}}
                  {{#ifequal role "user" }}
                  <span class="basic-vip">Starter VIP</span>  
                  {{/ifequal}}
                  </h6>

                </div>
              </div>
             
                <div class="col-6">
                <div class="info-button">
                  <a href="/profile/settings">Sozlamalar <i class="fa fa-cog info-fonts"></i></a>
                </div>
              </div>
               <div class="col-5">
                <div class="logout-button">
                  <a href="/logout">Chiqish <i class="fa fa-sign-out info-fonts"></i></a> 
                </div>
              </div>
              
            </div>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="section-heading">
            <div class="line-dec"></div>
            <h2>Mening <em>E'lonlarim</em>.</h2>
          </div>
        </div>
        {{#if data.length}}
        {{#each data}}
        <div class="col-lg-3">
          <div class="item">
            <div class="row">
              <div class="col-lg-12">
                <span class="author">
                  <img src="/images/{{userAvatar}}" alt="" style="max-width: 50px; max-height: 50px; border-radius: 50%;">
                </span>
                <img src="/images/{{serverImage}}" alt="" style="border-radius: 20px;">
                <h4>Akkaunt Sotiladi</h4>
              </div>
              <div class="col-lg-12">
                <div class="line-dec"></div>
                <div class="row">
                  <div class="col-6">
                    <span>Narxi: <br> <strong>{{{price}}} UZS</strong></span>
                  </div>
                  <div class="col-6">
                    <span>Server: <br> <strong>{{{server}}}</strong></span>
                  </div>
                </div>
              </div>
              {{!-- <div class="col-lg-12">
                <div class="main-button">
                  <a href="/account-details/{{_id}}">Batafsil</a>
                </div>
              </div> --}}
            </div>
          </div>
        </div>
        {{/each}}
        {{else}}
        <p>Sizning hech qanday E'lonlaringiz Yo'q!</p>
        {{/if}}

        
      </div>
